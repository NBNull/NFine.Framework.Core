<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <target name="all" xsi:type="File" fileName="logs\nlog-all-${shortdate}.log"  layout="${date:format=HH\:MM\:ss} ${logger} ${message}" />
        <target name="allconsole" xsi:type="Console"   layout="${date:format=HH\:MM\:ss} ${logger} ${message}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="all" />
        <logger name="*" minlevel="Error" writeTo="allconsole"/>
    </rules>
</nlog>
